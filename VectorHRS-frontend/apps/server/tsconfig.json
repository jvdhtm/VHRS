{
  "compilerOptions": {
    "lib": [ "es6", "es2021", "esnext" ],
    "target": "es2021",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "build"
  },
  "include": [
    "src"
  ]
}
